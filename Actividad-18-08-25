data class Carrera(val nombre: String, val instituto: String)

class Poder(val nombre : String){
    fun puede_volar(): String{
        return("En efecto puede volar")
    }
}

class Estudiante(
    val matricula: Int,
    val nombre: String,

    val carrera: Carrera,
    //val instituto: String,
        val apellidos: String = "No tiene xadres",
    val correo_de_contacto: String = "Ni en su casa lo conosen",
    val poderes: List<Poder> = emptyList(),
){
    fun obtener_correo(alumnos: String = "nombre secundario"): String{
        return "al${matricula}@alumnos.uacj.mx"
    }
    
    fun duplicar(): Estudiante{
        return Estudiante(matricula, nombre, carrera, apellidos, correo_de_contacto)
    }
    
}
    
